    </Style>
    <Style Selector="ui|ColorPicker:palette /template/ DockPanel#SpectrumContent">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <!-- Spectrum mode -->
    <Style Selector="ui|ColorPicker:spectrum /template/ #TextEntryContainer RadioButton">
        <Setter Property="IsVisible" Value="True"/>
    </Style>

    <!-- Hide the spectrum when TextEntry tab is selected in compact mode -->
    <Style Selector="ui|ColorPicker:textentry /template/ DockPanel#SpectrumContent">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <!-- Alpha controls enabled -->
    <Style Selector="ui|ColorPicker:alpha /template/ ui|ColorRamp#AlphaRamp">
        <Setter Property="IsVisible" Value="True"/>
    </Style>
    <Style Selector="ui|ColorPicker:alpha /template/ ui|NumberBox#AlphaBox">
        <Setter Property="IsVisible" Value="True"/>
    </Style>

    <!-- Alpha in compact mode -->
    <Style Selector="ui|ColorPicker:alpha:compact /template/ ui|ColorRamp#SpectrumAlphaRamp">
        <Setter Property="IsVisible" Value="True"/>
    </Style>

    <!-- Compact mode -->
    <Style Selector="ui|ColorPicker:compact /template/ StackPanel#TextEntryArea">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact /template/ TabItem#TextEntryTab">
        <Setter Property="IsVisible" Value="True"/>
    </Style>

    <Style Selector="ui|ColorPicker:compact:textentry /template/ StackPanel#TextEntryArea">
        <Setter Property="IsVisible" Value="True"/>
    </Style>

    <!-- HSV text entry (compact only) -->
    <Style Selector="ui|ColorPicker:compact:hsv /template/ ui|NumberBox#RedBox">
        <Setter Property="IsVisible" Value="False"/>
    </Style>    
    <Style Selector="ui|ColorPicker:compact:hsv /template/ ui|NumberBox#GreenBox">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:hsv /template/ ui|NumberBox#BlueBox">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:hsv /template/ ui|ColorRamp#RedRamp">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:hsv /template/ ui|ColorRamp#GreenRamp">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:hsv /template/ ui|ColorRamp#BlueRamp">
        <Setter Property="IsVisible" Value="False"/>
    </Style>

    <!-- RGB text entry (compact only) -->
    <Style Selector="ui|ColorPicker:compact:rgb /template/ ui|NumberBox#HueBox">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:rgb /template/ ui|NumberBox#SatBox">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:rgb /template/ ui|NumberBox#ValBox">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:rgb /template/ ui|ColorRamp#HueRamp">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:rgb /template/ ui|ColorRamp#SatRamp">
        <Setter Property="IsVisible" Value="False"/>
    </Style>
    <Style Selector="ui|ColorPicker:compact:rgb /template/ ui|ColorRamp#ValRamp">
        <Setter Property="IsVisible" Value="False"/>
