    <!--
    Amendments to CommandBar buttons which before ControlThemes used these styles to control their 
    states based on the CommandBar without needing to manually do it in code
    But I don't really support the CommandBar, and only ported it for the CommandBarFlyout, I'm not
    going to do anything special for it - so we'll just bring these styles back to support it
    I'd like to replace the CommandBar with something better in the future...
    -->
    
    <Style Selector="ui|CommandBar:labelbottom ui|CommandBarButton:compact:not(:overflow) /template/ TextBlock#TextLabel,
                     ui|CommandBar:labelbottom ui|CommandBarToggleButton:compact:not(:overflow) /template/ TextBlock#TextLabel">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="ui|CommandBar:labelbottom ui|CommandBarButton:compact:not(:overflow) /template/ Grid#ContentRoot,
                     ui|CommandBar:labelbottom ui|CommandBarToggleButton:compact:not(:overflow) /template/ Grid#ContentRoot">
        <Setter Property="MinHeight" Value="{DynamicResource AppBarThemeCompactHeight}" />
    </Style>

    <!-- We'll also attach this here too, so that the labels are hidden when the CommandBar is closed,
     and shown when it's opened. Again, this is only for when labels are on the bottom.
     This will eliminate the need to iterate over the elements when opening/closing and adjusting on the
     ICommandBarElements themselves - we let the styling system do it for us
     -->
    <Style Selector="ui|CommandBar:labelbottom:not(:open) ui|CommandBarButton:not(:overflow) /template/ TextBlock#TextLabel,
                     ui|CommandBar:labelbottom:not(:open) ui|CommandBarToggleButton:not(:overflow) /template/ TextBlock#TextLabel">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <!-- Also apply our compact change here too -->
    <Style Selector="ui|CommandBar:labelbottom:not(:open) ui|CommandBarButton:not(:overflow) /template/ Grid#ContentRoot,
                     ui|CommandBar:labelbottom:not(:open) ui|CommandBarToggleButton:not(:overflow) /template/ Grid#ContentRoot">
        <Setter Property="MinHeight" Value="{DynamicResource AppBarThemeCompactHeight}" />
    </Style>
    <Style Selector="ui|CommandBar:labelbottom:open ui|CommandBarButton:not(:overflow) /template/ TextBlock#TextLabel,
                     ui|CommandBar:labelbottom:open ui|CommandBarToggleButton:not(:overflow) /template/ TextBlock#TextLabel">
        <Setter Property="IsVisible" Value="True" />
    </Style>

    <!-- LabelOnRight -->
    <Style Selector="ui|CommandBar:labelright ui|CommandBarButton:not(:overflow),
                     ui|CommandBar:labelright ui|CommandBarToggleButton:not(:overflow)">
        <Setter Property="Width" Value="NaN" />
    </Style>
    <Style Selector="ui|CommandBar:labelright ui|CommandBarButton:not(:overflow) /template/ Viewbox#ContentViewbox,
                     ui|CommandBar:labelright ui|CommandBarToggleButton:not(:overflow) /template/ Viewbox#ContentViewbox">
        <Setter Property="Margin" Value="{DynamicResource AppBarButtonContentViewboxMargin}" />
    </Style>
    <Style Selector="ui|CommandBar:labelright ui|CommandBarButton:not(:overflow) /template/ Grid#ContentRoot,
                     ui|CommandBar:labelright ui|CommandBarToggleButton:not(:overflow) /template/ Grid#ContentRoot">
        <Setter Property="MinHeight" Value="{DynamicResource AppBarThemeCompactHeight}" />
    </Style>
    <Style Selector="ui|CommandBar:labelright ui|CommandBarButton:not(:overflow) /template/ TextBlock#TextLabel,
                     ui|CommandBar:labelright ui|CommandBarToggleButton:not(:overflow) /template/ TextBlock#TextLabel">
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="TextAlignment" Value="Left" />
        <Setter Property="Margin" Value="{DynamicResource AppBarButtonTextLabelOnRightMargin}" />
    </Style>
    <Style Selector="ui|CommandBar:labelright ui|CommandBarButton:not(:overflow) /template/ ui|SymbolIcon#SubItemChevron,
                     ui|CommandBar:labelright ui|CommandBarToggleButton:not(:overflow) /template/ ui|SymbolIcon#SubItemChevron">
        <Setter Property="Margin" Value="-7,20,12,0" />
    </Style>

    <!-- LabelCollapsed -->
    <Style Selector="ui|CommandBar:labelcollapsed ui|CommandBarButton:not(:overflow) /template/ Grid#ContentRoot,
                     ui|CommandBar:labelcollapsed ui|CommandBarToggleButton:not(:overflow) /template/ Grid#ContentRoot">
        <Setter Property="MinHeight" Value="{DynamicResource AppBarThemeCompactHeight}" />
    </Style>
    <Style Selector="ui|CommandBar:labelcollapsed ui|CommandBarButton:not(:overflow) /template/ TextBlock#TextLabel,
                     ui|CommandBar:labelcollapsed ui|CommandBarToggleButton:not(:overflow) /template/ TextBlock#TextLabel">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    
