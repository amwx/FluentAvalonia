                                            </DrawingImage>
                                        </ui:ImageIcon>
                                    </HeaderedContentControl>

                                    <TextBlock Text="{TemplateBinding Inheritance}"
                                               Margin="0 4 0 20"
                                               TextWrapping="Wrap"
                                               Name="InheritanceDisplay"
                                               IsVisible="False"/>

